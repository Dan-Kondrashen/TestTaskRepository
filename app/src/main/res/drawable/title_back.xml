<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shape="rectangle" >
            <gradient android:startColor="?colorPrimaryLight"
                android:endColor="?colorPrimaryLight" android:type="radial"
                android:gradientRadius="250dp"/>

            <corners
                android:bottomLeftRadius="@dimen/space4"
                android:bottomRightRadius="@dimen/space4"
                android:topLeftRadius="@dimen/space4"
                android:topRightRadius="@dimen/space4" />
        </shape>
    </item>
    <item android:bottom="5dp" android:right="2dp" android:top="1dp" android:left="1dp">
        <shape
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:shape="rectangle" >
            <solid android:color="?colorPrimaryUltraLight"/>

            <corners
                android:bottomLeftRadius="@dimen/space4"
                android:bottomRightRadius="@dimen/space4"
                android:topLeftRadius="@dimen/space4"
                android:topRightRadius="@dimen/space4" />

        </shape>
    </item>
</layer-list>