<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MyTheme3" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="colorIconDark">@color/grayUltraDark</item>
        <item name="colorPrimaryUltraLight">@color/white</item>
        <item name="colorPrimaryUltraDark">@color/black</item>
        <item name="colorPrimaryDark">@color/grayDark</item>
        <item name="colorTextHeader">@color/black</item>
        <item name="colorTextHint">@color/grayDark</item>
        <item name="colorPrimaryLight">@color/grayLight</item>
        <item name="colorPrimary">@color/white</item>

    </style>

    <style name="main_button_style" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?colorTextHeader</item>
        <item name="android:background">@drawable/btn_header</item>
    </style>
    <style name="menu_button_style" parent="@android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">?colorTextHeader</item>
        <item name="android:background">@drawable/menu_button_header</item>
    </style>
    <style name="main_text_style" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space8</item>
        <item name="android:textColor">?colorTextHeader</item>
    </style>

    <style name="main_text_28sp_style" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>

        <item name="android:textSize">@dimen/text28</item>
        <item name="android:padding">@dimen/space8</item>
        <item name="android:textColor">?colorTextHeader</item>
    </style>

    <style name="main_text_bold_style" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space8</item>
        <item name="android:textColor">?colorTextHeader</item>
    </style>
    <style name="hint_text_style" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/space8</item>
        <item name="android:textColor">?colorTextHint</item>
    </style>
    <style name="scrollBarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_thumb_custom</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_track_custom</item>
    </style>
</resources>